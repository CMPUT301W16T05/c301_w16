<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.c301_w16_g5.c301_w16_g5">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/chicken_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_main_screen"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name=".ItemViews"
            android:label="@string/title_activity_item_views"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".DisplayProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName=".DisplayProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DisplayProfileActivity" />
        </activity>
        <activity
            android:name=".NotificationsActivity"
            android:label="@string/title_activity_notices"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".BidsActivity"
            android:label="@string/title_activity_bids"
            android:parentActivityName=".MyChickenDisplayProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyChickenDisplayProfileActivity" />
        </activity>
        <activity
            android:name=".AddChickenActivity"
            android:label="@string/title_activity_add_chicken"
            android:parentActivityName=".ItemViews">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemViews" />
        </activity>
        <activity
            android:name=".SearchesActivity"
            android:label="@string/title_activity_searches"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".MyChickenDisplayProfileActivity"
            android:label="@string/title_activity_chicken_profile"
            android:parentActivityName=".ItemViews">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemViews" />
        </activity>
        <activity
            android:name=".OthersChickenDisplayProfileActivity"
            android:label="@string/title_activity_chicken_profile"></activity>
        <activity
            android:name=".EditChickenActivity"
            android:label="@string/title_activity_edit_chicken"
            android:parentActivityName=".MyChickenDisplayProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyChickenDisplayProfileActivity" />
        </activity>
        <activity android:name=".ViewPhotoActivity"></activity>
        <activity
            android:name=".SendMessageActivity"
            android:label="Send Message"
            android:parentActivityName=".NotificationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NotificationsActivity" />
        </activity>
    </application>

</manifest>
