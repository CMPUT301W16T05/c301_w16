<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.c301_w16_g5.c301_w16_g5">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_main_screen"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name=".ItemViews"
            android:label="@string/title_activity_item_views"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".ItemFragment1"
            android:label="@string/title_activity_item_fragment1"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".UserProfile"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName=".UserProfile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserProfile" />
        </activity>
        <activity
            android:name=".ItemChickenActivity"
            android:label="@string/title_activity_item_profile"
            android:parentActivityName=".ItemViews" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.c301_w16_g5.c301_w16_g5.ItemViews" />
        </activity>
        <activity
            android:name=".NotificationsActivity"
            android:label="@string/title_activity_notices" />
        <activity
            android:name=".BidsActivity"
            android:label="@string/title_activity_bids"
            android:parentActivityName=".ItemProfileActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemChickenActivity" />
        </activity>
        <activity
            android:name=".AddChickenActivity"
            android:label="@string/title_activity_add_item"
            android:parentActivityName=".ItemViews" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.c301_w16_g5.c301_w16_g5.ItemViews" />
        </activity>
        <activity
            android:name=".AddProfileActivity"
            android:label="@string/title_activity_add_profile" />
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_user_profile" />
    </application>

</manifest>
