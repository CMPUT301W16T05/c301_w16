<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.c301_w16_g5.c301_w16_g5.ChickenProfileActivity"
    tools:showIn="@layout/activity_chicken_profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name:"
        android:id="@+id/namePrompt"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#080101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description:"
        android:id="@+id/descriptionPrompt"
        android:textColor="#080101"
        android:layout_below="@+id/borrowPrompt"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Status: "
        android:id="@+id/statusPrompt"
        android:textColor="#080101"
        android:layout_below="@+id/namePrompt"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Owner: "
        android:id="@+id/ownerPrompt"
        android:layout_below="@+id/statusPrompt"
        android:layout_alignParentStart="true"
        android:textColor="#080101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Borrower:"
        android:id="@+id/borrowPrompt"
        android:layout_below="@+id/ownerPrompt"
        android:layout_alignParentStart="true"
        android:textColor="#080101" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/nameEdit"
        android:layout_above="@+id/statusPrompt"
        android:textColor="#0b0202"
        android:textColorHint="#090101"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/descriptionPrompt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/statusEdit"
        android:textColor="#0b0202"
        android:textColorHint="#090101"
        android:layout_alignTop="@+id/statusPrompt"
        android:layout_above="@+id/ownerPrompt"
        android:layout_alignEnd="@+id/nameEdit"
        android:layout_alignStart="@+id/nameEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/ownerEdit"
        android:textColor="#0b0202"
        android:textColorHint="#090101"
        android:layout_below="@+id/statusEdit"
        android:layout_above="@+id/borrowPrompt"
        android:layout_alignEnd="@+id/statusEdit"
        android:layout_alignStart="@+id/statusEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/borrowerEdit"
        android:textColor="#0b0202"
        android:textColorHint="#090101"
        android:layout_below="@+id/ownerEdit"
        android:layout_above="@+id/descriptionPrompt"
        android:layout_alignEnd="@+id/ownerEdit"
        android:layout_toEndOf="@+id/descriptionPrompt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/descriptionEdit"
        android:textColor="#0b0202"
        android:textColorHint="#090101"
        android:layout_below="@+id/descriptionPrompt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
